<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfileFragment">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvUserPosts"
        android:layout_width="412dp"
        android:layout_height="553dp"
        android:layout_below="@+id/tvProfileDescription"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="-2dp"
        android:layout_marginBottom="3dp" />

    <ImageView
        android:id="@+id/ivUserProfileImage"
        android:layout_width="90dp"
        android:layout_height="89dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="50dp"
        tools:srcCompat="@drawable/bhavi" />

    <TextView
        android:id="@+id/tvUserUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-7dp"
        android:layout_marginTop="63dp"
        android:layout_toEndOf="@+id/ivUserProfileImage"
        android:textColor="#100E0E"
        android:textSize="19sp"
        android:textStyle="bold"
        tools:text="bhavi" />

    <Button
        android:id="@+id/btnLogOut"
        android:layout_width="126dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="105dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="18dp"
        android:layout_toEndOf="@+id/tvUserUsername"
        android:background="@drawable/rounded_corner_black"
        android:text="Logout"
        android:textColor="#FFFFFF"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tvProfileDescription"
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivUserProfileImage"
        android:layout_alignParentStart="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="10dp"
        android:textColor="#0C0505"
        tools:text="this is bhavi and i wanna be a painter" />

    <Button
        android:id="@+id/btnDiscoveryComment"
        android:layout_width="123dp"
        android:layout_height="20dp"
        android:layout_below="@+id/btnLogOut"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="19dp"
        android:background="@drawable/rounded_corner_purple"
        android:text="Discovery Comments"
        android:textColor="#FFFFFF"
        android:textSize="10sp" />

    <Button
        android:id="@+id/btnEditProfile"
        android:layout_width="122dp"
        android:layout_height="18dp"
        android:layout_below="@+id/btnDiscoveryComment"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="19dp"
        android:background="@drawable/rounded_corner_purple"
        android:text="edit profile"
        android:textColor="#FFFFFF"
        android:textSize="10sp" />

    <Button
        android:id="@+id/btnHangoutSpots"
        android:layout_width="116dp"
        android:layout_height="17dp"
        android:layout_below="@+id/btnEditProfile"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="115dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="19dp"
        android:layout_toEndOf="@+id/tvUserUsername"
        android:background="@drawable/rounded_corner_purple"
        android:text="hangout spot"
        android:textColor="#FFFFFF"
        android:textSize="10sp" />

    <Button
        android:id="@+id/btnLocation"
        android:layout_width="191dp"
        android:layout_height="17dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="17dp"
        android:layout_toEndOf="@+id/tvUserUsername"
        android:background="@drawable/rounded_corner_black"
        android:text="Location"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        android:visibility="invisible"
        tools:visibility="visible" />

</RelativeLayout>