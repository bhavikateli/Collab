<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btnConfirmChanges"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileActivity">

    <EditText
        android:id="@+id/etChangeProfileDescription"
        android:layout_width="311dp"
        android:layout_height="90dp"
        android:layout_below="@+id/etChangeEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_corner_lightgray"
        android:ems="10"
        android:gravity="start|top"
        android:hint="     enter profile description"
        android:inputType="textMultiLine"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnChangeProfilePictureGallery"
        android:layout_width="153dp"
        android:layout_height="28dp"
        android:layout_below="@+id/etChangeProfileDescription"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/rounded_corner_black"
        android:text="choose from gallery"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btnChangeProfilePictureCamera"
        android:layout_width="163dp"
        android:layout_height="28dp"
        android:layout_below="@+id/etChangeProfileDescription"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_corner_black"
        android:text="take profile picture"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/etChangePassword"
        android:layout_width="310dp"
        android:layout_height="30dp"
        android:layout_below="@+id/etChangeUsername"
        android:layout_alignParentStart="true"
        android:layout_marginStart="53dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_corner_lightgray"
        android:ems="10"
        android:hint="    change password"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/etChangeUsername"
        tools:layout_editor_absoluteX="60dp" />

    <EditText
        android:id="@+id/etChangeEmail"
        android:layout_width="310dp"
        android:layout_height="30dp"
        android:layout_below="@+id/etChangePassword"
        android:layout_alignParentStart="true"
        android:layout_marginStart="53dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_corner_lightgray"
        android:ems="10"
        android:hint="    change email"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/etChangePassword"
        tools:layout_editor_absoluteX="60dp" />

    <EditText
        android:id="@+id/etChangeUsername"
        android:layout_width="310dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/rounded_corner_lightgray"
        android:ems="10"
        android:hint="    change username"
        android:inputType="textPersonName"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="108dp" />

    <ImageView
        android:id="@+id/ivPreviewProfileChange"
        android:layout_width="176dp"
        android:layout_height="190dp"
        android:layout_below="@+id/btnChangeProfilePictureGallery"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="116dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/border"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btnConfirmChange"
        android:layout_width="213dp"
        android:layout_height="30dp"
        android:layout_below="@+id/ivPreviewProfileChange"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="97dp"
        android:background="@drawable/rounded_corner_purple"
        android:text="Confirm Change"
        android:textColor="#FFFFFF" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="176dp"
        android:layout_height="53dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="123dp"
        android:layout_marginTop="8dp"
        app:srcCompat="@drawable/collab" />
</RelativeLayout>