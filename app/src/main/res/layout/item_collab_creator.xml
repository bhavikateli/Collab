<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivProfileImageSpecificDiscovery"
        android:layout_width="112dp"
        android:layout_height="116dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="14dp"
        app:srcCompat="@drawable/bhavi"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvUsernameSpecificDiscovery"
        android:layout_width="84dp"
        android:layout_height="31dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/ivProfileImageSpecificDiscovery"
        android:text="bhavi" />

    <Button
        android:id="@+id/btnFollowSpecificDiscovery"
        android:layout_width="107dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="57dp"
        android:layout_marginTop="19dp"
        android:layout_toEndOf="@+id/tvUsernameSpecificDiscovery"
        android:text="follow" />

    <Button
        android:id="@+id/btnChatSpecificDiscovery"
        android:layout_width="101dp"
        android:layout_height="36dp"
        android:layout_below="@+id/btnFollowSpecificDiscovery"
        android:layout_marginStart="59dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/tvUsernameSpecificDiscovery"
        android:text="Chat" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCreatorPostsSpecificDiscovery"
        android:layout_width="339dp"
        android:layout_height="159dp"
        android:layout_below="@+id/tvCreatorDescriptionSpecificDiscovery"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/tvCreatorDescriptionSpecificDiscovery"
        android:layout_width="304dp"
        android:layout_height="68dp"
        android:layout_below="@+id/ivProfileImageSpecificDiscovery"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="13dp"
        android:text="hi, my name is bhavi and i am interested in becoming a painter and to create things " />

    <Button
        android:id="@+id/btnLocationSpecificDiscovery"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_below="@+id/btnChatSpecificDiscovery"
        android:layout_marginStart="67dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/tvUsernameSpecificDiscovery"
        android:text="location"
        android:textSize="10sp" />
</RelativeLayout>