<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DiscoveryFragment">


    <TextView
        android:id="@+id/tvPublish2"
        android:layout_width="395dp"
        android:layout_height="54dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp"
        android:text="Select the following topics to find creators in the following those areas"
        android:textAlignment="center"
        android:textColor="#1C1818" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTopics"
        android:layout_width="411dp"
        android:layout_height="466dp"
        android:layout_below="@+id/tvPublish2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="-15dp" />

    <Button
        android:id="@+id/btnSubmitDiscovery"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/rvTopics"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_corner_black"
        android:text="submit"
        android:textColor="#FFFFFF" />
</RelativeLayout>