<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReportProblemActivity">

    <TextView
        android:id="@+id/tvSorryToSee"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="64dp"
        android:layout_marginTop="126dp"
        android:text="Sorry to see that you are having problems with the app. Please leave us some feedback so we can fix the issue!"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/tvFeatureIssue"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSorryToSee"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="29dp"
        android:background="@drawable/border"
        android:ems="10"
        android:gravity="start|top"
        android:hint="   feature acting up?"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/tvIssueDescription"
        android:layout_width="290dp"
        android:layout_height="118dp"
        android:layout_below="@+id/tvFeatureIssue"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="62dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/border"
        android:ems="10"
        android:gravity="start|top"
        android:hint="   any further details?"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/btnSubmitIssue"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_below="@+id/tvIssueDescription"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/rounded_corner_black"
        android:text="submit"
        android:textColor="#FFFFFF" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="180dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="114dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/collab" />
</RelativeLayout>